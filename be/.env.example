# Environment variables for development
API_TITLE=QuantumDock API
API_DESCRIPTION=In-Silico DENV Drug Discovery Platform
API_VERSION=1.0.0
DEBUG=true

# Server configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# File storage
UPLOAD_DIRECTORY=uploads
RESULTS_DIRECTORY=results
TEMP_DIRECTORY=temp
MAX_FILE_SIZE=104857600

# Docking configuration
MAX_CONCURRENT_JOBS=5
DEFAULT_EXHAUSTIVENESS=8
DEFAULT_NUM_MODES=9
DEFAULT_ENERGY_RANGE=3.0
MAX_DOCKING_TIME=3600

# Security
SECRET_KEY=your-very-secret-key-for-production-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173","http://127.0.0.1:3000","http://127.0.0.1:5173"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=quantumdock.log

# Database
DATABASE_URL=sqlite:///./quantumdock.db

# External tools (update paths as needed)
AUTODOCK_VINA_PATH=vina
OPENBABEL_PATH=obabel
PYMOL_PATH=pymol
